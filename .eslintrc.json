{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": [
    "airbnb-base"
  ],
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "rules": {
    "import/extensions": [
      "error",
      "always"
    ],
    "no-use-before-define": [
      "error",
      "nofunc"
    ],
    "max-len": [
      "error",
      {
        "code": 200,
        "tabWidth": 2
      }
    ],
    "no-await-in-loop": [
      "off"
    ],
    "no-mixed-operators": [
      "off"
    ],
    "no-plusplus": [
      "error",
      {
        "allowForLoopAfterthoughts": true
      }
    ]
  }
}